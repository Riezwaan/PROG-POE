<Window x:Class="PROG_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Prototype" Height="600" Width="900">

    <Grid Background="#f5f5f5">
        <TabControl Margin="10">

            <!-- Lecturer Claim Submission -->
            <TabItem Header="Lecturer Claim">
                <StackPanel Margin="15">
                    <TextBlock Text="Lecturer Claim Submission" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label Content="Full Name:"/>
                    <TextBox Width="250"/>

                    <Label Content="Module:"/>
                    <TextBox Width="250"/>

                    <Label Content="Claim Amount:"/>
                    <TextBox Width="150"/>

                    <Label Content="Supporting Documents:"/>
                    <Button Content="Upload File" Width="120" Margin="0,5"/>

                    <Button Content="Submit Claim" Width="150" Height="35" Margin="0,15,0,0" Background="#4CAF50" Foreground="White"/>
                </StackPanel>
            </TabItem>

            <!-- Coordinator Approval -->
            <TabItem Header="Coordinator Approval">
                <StackPanel Margin="15">
                    <TextBlock Text="Coordinator Approval Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox Height="200" Width="500">
                        <ListBoxItem Content="Claim #001 - Pending"/>
                        <ListBoxItem Content="Claim #002 - Pending"/>
                        <ListBoxItem Content="Claim #003 - Approved"/>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Approve" Width="100" Margin="5"/>
                        <Button Content="Reject" Width="100" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Claim Tracking -->
            <TabItem Header="Claim Tracking">
                <StackPanel Margin="15">
                    <TextBlock Text="Claim Tracking Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid AutoGenerateColumns="True" Height="300" Width="600">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}"/>
                            <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer}"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Admin Dashboard -->
            <TabItem Header="Admin Dashboard">
                <StackPanel Margin="15">
                    <TextBlock Text="Admin Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Generate Reports" Width="180" Height="35" Margin="0,5"/>
                    <Button Content="Manage Users" Width="180" Height="35" Margin="0,5"/>
                    <Button Content="System Settings" Width="180" Height="35" Margin="0,5"/>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
